<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wdtx.littlebell.activity.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@color/transparent"/>

        <LinearLayout
            android:id="@+id/id_ll_userMsg"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="@drawable/fragment_found_list_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="8dp">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/id_iv_header"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/phone1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="问鼎"
                    android:textColor="#000"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/id_tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号：17308498346"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@color/transparent"/>

        <LinearLayout
            android:id="@+id/id_ll_babyModel"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_found_list_bg"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:id="@+id/id_ll_deviceMsg">

                <TextView
                    android:id="@+id/id_tv_deviceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="BabyCare_106"
                    android:textColor="#000"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/id_tv_connState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="连接状态：已连接"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="@color/transparent"/>

            <TextView
                android:id="@+id/id_tv_family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_found_list_bg"
                android:clickable="true"
                android:paddingBottom="15dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:text="家庭成员"
                android:textColor="#000"
                android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc"/>

            <TextView
                android:id="@+id/id_tv_mbApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_found_list_bg"
                android:clickable="true"
                android:paddingBottom="15dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:text="成员申请"
                android:textColor="#000"
                android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="@color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_ll_genModel"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_tv_babyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_found_list_bg"
                android:clickable="true"
                android:paddingBottom="15dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:text="宝宝：小淘气"
                android:textColor="#000"
                android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc"/>

            <TextView
                android:id="@+id/id_tv_addBaby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_found_list_bg"
                android:clickable="true"
                android:paddingBottom="15dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:text="添加宝宝账号"
                android:textColor="#000"
                android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="@color/transparent"/>
        </LinearLayout>

        <TextView
            android:id="@+id/id_tv_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fragment_found_list_bg"
            android:clickable="true"
            android:paddingBottom="15dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:text="问题反馈"
            android:textColor="#000"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"/>


        <TextView
            android:id="@+id/id_tv_checkUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fragment_found_list_bg"
            android:clickable="true"
            android:paddingBottom="15dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:text="检查更新"
            android:textColor="#000"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"/>

        <TextView
            android:id="@+id/id_tv_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fragment_found_list_bg"
            android:clickable="true"
            android:paddingBottom="15dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:text="系统设置"
            android:textColor="#000"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/id_tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red_400"
            android:clickable="true"
            android:paddingBottom="15dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:text="退出登录"
            android:textColor="#fff"
            android:textSize="18sp"/>
    </LinearLayout>
</ScrollView>
