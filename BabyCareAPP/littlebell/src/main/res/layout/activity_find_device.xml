<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FindDeviceActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content"
        app:rb_color="#0099CC"
        app:rb_radius="32dp"
        app:rb_rippleAmount="4"
        app:rb_duration="3000"
        app:rb_scale="6">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:id="@+id/centerImage"
            android:src="@drawable/phone1"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/id_ll_device_1"
            android:orientation="vertical"
            android:layout_toStartOf="@id/centerImage"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="32dp"
            android:layout_above="@id/centerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/phone2"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/id_tv_device_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_ll_device_2"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_toStartOf="@id/centerImage"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="6dp"
            android:layout_below="@id/centerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/phone2"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/id_tv_device_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/id_ll_device_4"
            android:orientation="vertical"
            android:layout_toEndOf="@id/centerImage"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="6dp"
            android:layout_above="@id/centerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/phone2"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/id_tv_device_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/id_ll_device_3"
            android:orientation="vertical"
            android:layout_toEndOf="@id/centerImage"
            android:layout_marginStart="6dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/centerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/phone2"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/id_tv_device_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </com.skyfishjy.library.RippleBackground>

</RelativeLayout>
